<%= javascript_tag do %>
      mpq.track("search",{"term":my_term})
<% end %>

<% if @images.empty? %>
	<div class="row" >
		<%= image_tag("logo_camera_only.png", :width =>"200px",:style => 'display:block;margin-right:auto;margin-left:auto;padding-top:40px;opacity:0.5;') %>
	</div>
	<div class="row" style="text-align:center;padding-top:30px;font-size:1.2em;">
		Sorry, no recent images found on twitter</br>
	<p><%= link_to_function "Back", "history.back()"%></p>
	</div>
<% else %>
<div class="row" style="padding-bottom:6px;"><fb:like href="http://picture.ly/search?q=<%= @term %>" send="false" width="450" show_faces="false"></fb:like>
</div>
<div class="row">
	<% if @term == "" %>
	<h3>Recent photos taken from <%= time_ago_in_words(@images.first.created_at) if @images.first %> to <%= time_ago_in_words(@images.last.created_at) if @images.last %> ago</h3>
	<% else %>
	<h3>Recent photos of <%= link_to @term, "/search?q=" + @term %> taken from <%= time_ago_in_words(@images.first.created_at) if @images.first %> to <%= time_ago_in_words(@images.last.created_at) if @images.last %> ago</h3>
	<% end %>
	</div>
	<div class="row" style="padding-bottom:4px;">
	<% if @paged_results['previous_page'] %>
		<%=link_to "Prev", search_url_path(:url => @paged_results['previous_page'], :q => @term), :class => "info btn" %>
	<% else %>
		<%=link_to "Prev", search_url_path(:url => @paged_results['previous_page'], :q => @term), :class => "disabled info btn" %>
	<% end %>
	<% if @paged_results['next_page'] %>
		<%=link_to "Next", search_url_path(:url => @paged_results["next_page"],:q => @term), :class => "info btn" %>
	<% else %>
		<%=link_to "Next", search_url_path(:url => @paged_results["next_page"],:q => @term), :class => "disabled info btn" %>
	<% end %>
	
</div>	
<div class="grid">
			
			<% row = @images.count / 5  if @images%>
			<% if row < 5 %>
			<% row = 1 %>
			<% end %>
	
			<% @images.each_slice(row) do |slice| %>
				<div class ="column three">
					<% slice.each do |image| %>
						<% if image %>
							<% if isLive?(image.image_url) %>
								<%= link_to(image_tag(image.image_url, :alt => "Picture.ly has a boo boo"), picture_path(:id => image.id)) %>

							<% end %>
						<% end %>
					<% end %>
				</div>
			<% end %>
			
	
</div>
<% end %>