<h1>Listing tweets</h1>

<table>
  <tr>
    <th>Tweeter</th>
    <th>Identifier</th>
    <th>Tweet text</th>
    <th>Tweet created at</th>
    <th>Source</th>
    <th>Geo</th>
    <th>Provider name</th>
    <th>Oembed type</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.tweeter_id %></td>
    <td><%= tweet.identifier %></td>
    <td><%= tweet.tweet_text %></td>
    <td><%= tweet.tweet_created_at %></td>
    <td><%= tweet.source %></td>
    <td><%= tweet.geo %></td>
    <td><%= tweet.provider_name %></td>
    <td><%= tweet.oembed_type %></td>
    <td><%= tweet.url %></td>
    <td><%= link_to 'Show', tweet %></td>
    <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
    <td><%= link_to 'Destroy', tweet, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tweet', new_tweet_path %>
